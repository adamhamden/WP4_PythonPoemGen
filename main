#!/usr/bin/env python

import sys
import requests
from bs4 import BeautifulSoup


num_args = len(sys.argv)
if num_args > 2:
	print("Please only enter one keyword")
	exit()

keyword = sys.argv[1]

times_url = "https://www.latimes.com"
url = "https://www.latimes.com/search/?q=" + str(keyword) 

page = requests.get(url)

soup = BeautifulSoup(page.content, 'html.parser')


"""for a in soup.find_all('div', class_="h7"):
    for b in a.find_all('a', href=True):
    	print times_url + b['href']"""

#finds url of top article relating to keyword
print times_url + soup.find_all('div', class_="h7")[0].find_all('a', href=True)[0]['href']
